<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
  <meta charset="UTF-8">
  <title>ورود</title>
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>

  <div class="auth-box">
    <h1>ورود</h1>
    <p class="desc">ایمیل خود را وارد کنید</p>

    <form action="/auth/otp" method="post" id="loginForm" class="form">
      <label>ایمیل</label>
      <input type="email" id="emailInput" name="email" required placeholder="example@mail.com">

      <button type="submit" class="btn">ادامه</button>
      <%if(locals.messages.inlineError){%>
        <span class="validation-error">
          <%=locals.messages.inlineError%>
        </span>
        <%}%>
    </form>
  </div>

  <script src="/js/login.js"></script>
  <script src="/js/sweetalert.js"></script>
  <script>
    if ("<%=locals.messages.success%>") {
      Swal.fire({
        title: "<%=locals.messages.success%>",
        icon: "success",
        draggable: true
      });
    } else if ("<%=locals.messages.error%>") {
      Swal.fire({
        title: "<%=locals.messages.error%>",
        text: "<%=locals.messages.error2%>",
        icon: "error",
        confirmButtonText: `تلاش دوباره`,
      })
    }  </script>
</body>

</html>